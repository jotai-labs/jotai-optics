{
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "jotai-optics": ["./src"]
    },
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"]
  }
}
